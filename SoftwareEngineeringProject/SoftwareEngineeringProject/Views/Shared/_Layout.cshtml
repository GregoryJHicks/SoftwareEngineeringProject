<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Michael's Cafe</title>

    <!--Here is the meta data for the css stuff, feel free to edit this part-->
    <link rel="stylesheet" href="~/css/w3schools.css" />
    <link rel="stylesheet" href="~/css/Google_Amatic_Font.css" />
    <style>
        body, html {
            height: 100%
        }

        body, h1, h2, h3, h4, h5, h6 {
            font-family: "Amatic SC", sans-serif
        }

        .menu {
            display: none
        }
    </style>
    <!--END meta data for css-->

</head>
<body>

    <!--Here is the Nav bar, feel free to edit this as you like-->
    <div class="w3-top w3-hide-small">
        <div class="w3-bar w3-xlarge w3-white w3-opacity w3-hover-opacity-off" id="myNavbar">
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Cart">Cart</a>
            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Orders">Orders</a>
        </div>
    </div>
    <!--END nav bar-->

    <!--DO NOT TOUCH THIS-->
    <div class="w3-container">
        <main role="main">
            @RenderBody()
        </main>
    </div>
    <!--END DO NOT TOUCH THIS-->

    <!--Here is the footer feel free to edit this, especiallt the css bits-->
    <footer class="w3-center w3-black w3-padding-48 w3-xxlarge">
        <p>Powered by <a href="https://www.w3schools.com/w3css/default.asp" title="W3.CSS" target="_blank" class="w3-hover-text-green">w3.css</a></p>
    </footer>
    <!--
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        RenderSection("Scripts", required: false)
    -->
    <!--END footer-->

</body>
</html>
