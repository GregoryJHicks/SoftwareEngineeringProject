@model List<SoftwareEngineeringProject.Models.MenuItem>;

@{
    ViewData["Title"] = "Home Page";
}


<style>
    header 
    {
        background-repeat: no-repeat;
        background-size: cover;
        background-image: url(~/wwwroot/images/mc_bg_img.jpg); /*Cannot figure out the image*/
        min-height: 90%;
    }
</style>

<!--Header for the Menu-->
<header class="w3-display-container w3-grayscale-min" id="home">
    <div class="w3-display-bottomleft w3-padding">
        <span class="w3-tag w3-xlarge">Open weekdays from 7am to 4:30pm</span>
    </div>
    <div class="w3-display-middle w3-center">
        <span class="w3-text-white w3-hide-small" style="font-size:100px">Michael's<br />Café</span>
    </div>
</header>

@{
    foreach (var item in Model)
    {
        <h1>
            <b>
                Name
            </b>
            <span class="w3-right w3-tag w3-dark-grey w3-round">
                price
            </span>
        </h1>

        <p class="w3-text-grey">
            description
            <a href="" class="w3-bar-item w3-button w3-right">
                <span class="w3-right w3-tag w3-red w3-round">
                    ADD TO CART
                </span>
            </a>
        </p>
    }
}


